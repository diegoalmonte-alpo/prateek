<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit_project" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@id='informations']" position="inside">
            <div t-if="o.project_id" class="col-3 bm-2">
                <strong>Proyecto:</strong>
                <p t-field="o.project_id" class="m-0"/>
            </div>
            <div t-if="o.uso" class="col-3 bm-2">
                <strong>Uso:</strong>
                <p t-field="o.uso" class="m-0"/>
            </div>
        </xpath>
    </template>
</odoo>