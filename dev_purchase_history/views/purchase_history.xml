<odoo>
    <record id="product_history_view_tree" model="ir.ui.view">
        <field name="name">product.history.view.tree</field>
        <field name="model">purchase.history</field>
        <field name="arch" type="xml">
            <tree string="Product History">
                <field name="po_order"/>
                <field name="partner_id"/>
                <field name="order_date"/>
                <field name="price"/>
                <field name="qty"/>
                <field name="remark"/>
            </tree>
        </field>
    </record>

    <record id="purchase_order_manager_view_form" model="ir.ui.view">
        <field name="name">product.history.view.form</field>
        <field name="model">purchase.history</field>
        <field name="arch" type="xml">
            <form string="Product History">
                <field name="partner_id"/>
                <field name="order_date"/>
                <field name="qty"/>
            </form>
        </field>
    </record>
</odoo>